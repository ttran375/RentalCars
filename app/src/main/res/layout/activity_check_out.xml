<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOutActivity">


    <TextView
        android:id="@+id/selectedCarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Selected Car: "
        android:textSize="18sp" />


    <EditText
        android:id="@+id/rentalDaysEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedCarText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Number of rental days"
        android:inputType="number" />


    <Button
        android:id="@+id/checkoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rentalDaysEditText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Checkout" />
</RelativeLayout>
